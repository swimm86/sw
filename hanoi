#include <cstdlib>
#include <iostream>
#include <stdio.h>
#include <math.h>
#include <stdlib.h>

using namespace std;

int hanoi(int, int, int, int);

int main(int argc, char *argv[])
{
    int disk, start = 1, empty = 2, target = 3;
    printf( "Enter number of disks: " );
    scanf( "%d", &disk );
    printf("\n")
    hanoi(disk, start, empty, target);

    system("PAUSE");
    return EXIT_SUCCESS;
}

int hanoi(int diskk, int startt, int emptyy, int targett)
{
    int copy;
    while ( disk != 0)
    {
          diskk-=1;
          printf ("%d --> %d\n", startt, emptyy);
          if ( disk != 0)
          {
               disk-=1;
               printf ("%d --> %d\n", startt, targett);
          }
          printf ("%d --> %d\n", emptyy, targett);
    }
    hanoi(diskk, startt, emptyy, targett);
    return end;    
}
